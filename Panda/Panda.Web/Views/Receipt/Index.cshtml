@model ICollection<Receipt>
@{
    ViewData["Title"] = "Index";
}

<link href="~/css/ReceiptStyleSheet.css" rel="stylesheet" />

<h2 class="text-center">My Receipts</h2>
<hr style="border: solid 1px" />

<table class="table-hover col-md-12">
    <thead>
        <tr class="text-center">
            <th class="p-2" scope="col">Id</th>
            <th scope="col">Fee</th>
            <th scope="col">Issued On</th>
            <th scope="col">Recipient</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var receipt in Model)
        {
        <tr class="text-center">
            <td class="p-3">@receipt.Id</td>
            <td>$@receipt.Fee</td>
            <td>@receipt.IssuedOn.ToString("dd/MM/yyyy")</td>
            <td>@User.Identity.Name</td>
            <td><a class="btn btn-dark" asp-controller="Receipt" asp-action="Details" asp-route-id="@receipt.Id">Details</a></td>
        </tr>
        }
    </tbody>
</table>

