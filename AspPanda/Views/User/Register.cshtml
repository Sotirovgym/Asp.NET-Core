@model RegisterViewModel
<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-2">
                <div class="card-header">Register</div>
                <div class="card-body">
                    @using (@Html.BeginForm("Register", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-md-4 text-md-right">
                            @Html.ValidationMessageFor(model => model.Username, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Username, null, new { @class = "col-md-4 col-form-label text-md-right" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.Username, null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-4 text-md-right">
                            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Password, null, new { @class = "col-md-4 col-form-label text-md-right" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.Password, null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.ConfirmPassword, null, new { @class = "col-md-4 col-form-label text-md-right" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.ConfirmPassword, null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-4 text-md-right">
                            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Email, null, new { @class = "col-md-4 col-form-label text-md-right" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.Email, null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6 offset-md-4">
                            <button type="submit" class="btn btn-primary">
                                Register
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>